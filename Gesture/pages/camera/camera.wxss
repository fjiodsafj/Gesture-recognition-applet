  width: 95%;
  height: 600rpx;
  border:1rpx solid #efefef;
  border-radius: 20rpx;
  box-shadow: 1rpx 1rpx 15rpx #ddd;
  overflow: hidden;
}
.mge-img image{
  width: 100%;
  height: 100%;
}
